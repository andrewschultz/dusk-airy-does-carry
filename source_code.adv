         : match "why trains" {
            : if (point_why_trains) {
               : print "Already done!" ;
               : done ;
            }
            : if (!point_k_vroom) {
               : print "You don't have the energy yet." ;
               : set_true "think_why_trains" ;
               : done ;
            }
            : print "Narrative text." ;
            : set_false "think_why_trains" ;
            : set_true "point_why_trains" ;
            : gosub "add_point" ;
            : done ;
         }
         : if (!point_why_trains) {
            : match "why _;_ trains" {
               : gosub "say_half" ;
               : done ;
            }
         }
      }
   }
