   phase_tats : object "{i_fspt}" ;
   dump_ale : object "{i_dpda}" msg="{dump_ale_description}" ;
}

connections {
   from, direction, to = [
   r0, up, r9
   r9, north, r8
   r8, north, r7
   r9, west, r5
   r9, east, r6
   r5, west, r1
   r6, east, r4
   r5, north, r2
   r6, north, r3
   ]
}

